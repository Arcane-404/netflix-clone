{
  "colors": {
    "primary": {
      "_300": "#f40612",
      "_400": "#E50914",
      "_600": "#B20710",
      "_700": "#85050B"
    },
    "neutral": {
      "_400": "hsl(0, 0%, 75%)",
      "_600": "#8C8C8C"
    },
    "blue"   : "#0071EB",
    "orange" : "#FFA00A",
    "light"  : "hsl(0, 100%, 100%)",
    "dark"   : "hsl(0, 100%, 0%)"
  },
  "fontFamily": {
    "primary"   : "Gotham Bold",
    "secondary" : "Gotham Book"
  },
  "fontSize": {
    "headline": {
      "sm": "1.75rem",
      "md": "3.125rem",
      "lg": "4rem"
    },
    "subhead": {
      "sm": "1.25rem",
      "lg": "1.625rem"
    },
    "copy": {
      "sm": "1.125rem",
      "lg": "1.438rem"
    },
    "link"     : "",
    "cta"      : "",
    "body"     : ""
  },

  "gradient": {
    "navbar": "linear-gradient(to bottom,rgba(0,0,0, 0.7) 10%,rgba(0,0,0,0))",
    "card": "0px 3px 10px rgba(0,0,0, 0.75)",
    "banner": {
      "home": "linear-gradient(to top,rgba(0,0,0, 0.8) 0,rgba(0,0,0,0) 60%,rgba(0,0,0, 0.8) 100%)",
      "browse": "linear-gradient(to bottom,rgba(20,20,20,0) 0,rgba(20,20,20, 0.15) 15%,rgba(20,20,20, 0.35) 29%,rgba(20,20,20, 0.58) 44%,#141414 68%,#141414 100%);"
    }
  },
  "shadow": {
    "btn": "0 1px 0 rgb(0 0 0 / 45%)"
  },
  "spacing": {
    "xsm": "0.125em",
    "sm": "1em",
    "md": "1.25em",
    "lg": "1.5em",
    "xlg": "2em"
  },
  "radius": {
    "pill"   : "1.5em",
    "round"  : {
      "xsm": "0.125em",
      "sm" : "0.25em",
      "md" : "0.375em"
    },
    "circle" : "50%"
  },
  "motion": {
    "quick": "0.1s ease",
    "default": "0.2s ease",
    "other": "transform .54s cubic-bezier(0.5, 0, 0.1, 1)"
  },

  "breakpoints": {
    "tablet": {
      "sm": "(min-width: 550px)",
      "lg": "(min-width: 900px)"
    },
    "desktop": "(min-width: 1080px)"
  }
}
